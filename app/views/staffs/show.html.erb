<%= render "shared/header" %>

<div class='staff-show'> 
  <div class='staff-box'>
    <div class='staff-img-content'>
      <%= image_tag @staff.image, class:"staff-box-img" %>
    </div>

    <table class="detail-table">
      <tbody>
        <tr>
          <th class="detail-item">名前</th>
          <td class="detail-value"><%= @staff.name %></td>
        </tr>
        <tr>
          <th class="detail-item">配達員歴</th>
          <td class="detail-value"><%= @staff.history %></td>
        </tr>
        <tr>
          <th class="detail-item">趣味</th>
          <td class="detail-value"><%= @staff.hobby %></td>
        </tr>
        <tr>
          <th class="detail-item">コメント</th>
          <td class="detail-value"><%= @staff.comment %></td>
        </tr>
      </tbody>
    </table>

    <%= link_to new_staff_reservation_path(@staff) do %>
    <% if user_signed_in? %>
    <div class="comment-btn">
      <%= image_tag "IMG_1766.PNG" ,class:"comment-flag-icon" ,width:"20",height:"25"%>
      <span>指名して予約<span>
    </div>
    <% end %>
    <% end %>
    <% if user_signed_in? && current_user.admin %>
      <div>
        <%= link_to "編集", edit_staff_path(@staff.id), method: :get, class: "item-red-btn" %>
      </div>
      <div>
        <%= link_to "削除", staff_path(@staff.id), method: :delete, class:"item-destroy" %>
      </div>
    <% end %>

  </div>

</div>

<%= render "shared/footer" %>