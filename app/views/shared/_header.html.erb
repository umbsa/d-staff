<header class='top-page-header'>
  <div class='search-bar-contents'>
    <%= link_to image_tag("IMG_1757.PNG", class:"logo-icon"), "/" %>
    <%= form_tag(search_staffs_path,:method => 'get', class: "search-form") do %>
      <%= text_field_tag :search, '', class: "input-box", placeholder: 'スタッフの名前を入力してください' %>
      <button class="search-button">
        <%= image_tag "search.png", class:"search-icon" %>
      </button>
    <% end %>
  </div>
  <div class='nav'>
    <ul class='lists-left'>
      <% if user_signed_in? && current_user.admin? %>
        <li><%= link_to 'スタッフ情報投稿', new_staff_path, class: "category-list" %></li>
        <li><%= link_to '予約確認', verifications_path, class: "brand-list" %></li>
      <% end %>
    </ul>
    <ul class='lists-right'>
      <% if user_signed_in? %>
        <li><%= link_to current_user.nickname, "#", class: "user-nickname" %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout"  %></li>
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %> 
    </ul>
  </div>
</header>
